@model Job_websit.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<section class="bounce animated article-clean">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-8 offset-lg-1 offset-xl-2">
                <div class="intro">
                    <h1 class="text-center" style="font-family: Cairo, sans-serif;">@Html.DisplayFor(model => model.JopTitle)</h1>
                    <h4 class="text-center"><span class="by"></span> <a href="~/Home/Index">@Html.DisplayFor(model => model.Category.CategoryName)</a></h4>
                    <img class="img-fluid"  src="~/Uploads/@Html.DisplayFor(model => model.JopImage)">
                </div>
                <div class="text">
                    <p class="text-end" style="font-family: Cairo, sans-serif;">@Html.DisplayFor(model => model.JobContent)</p>
                </div>
            </div>
        </div>
    </div>
    <div data-aos="zoom-in" class="social-icons">
        @Html.ActionLink("التقدم الى الوضيفة", "Apply", new { id = Model.Id }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("الرجوع الى الصفحة  ", "Index", new { @class = "btn btn-default" })
    </div>
</section>




